<Button>:
    font_size: 32
    background_color: .2,.5,1,1

<MyGridLayout>:
    id: calculator
    display: input
    rows : 6
    padding : 10
    spacing: 10


    BoxLayout:
        TextInput:
            id : input
            font_size: 48
            multiline: False
        
    BoxLayout:
        spacing: 10
        Button:
            text: '7'
            on_press: input.text += self.text
        Button:
            text: '8'
            on_press: input.text += self.text
        Button:
            text: '9'
            on_press: input.text += self.text
        Button:
            text: '+'
            on_press: input.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: '4'
            on_press: input.text += self.text
        Button:
            text: '5'
            on_press: input.text += self.text
        Button:
            text: '6'
            on_press: input.text += self.text
        Button:
            text: '-'
            on_press: input.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: '1'
            on_press: input.text += self.text
        Button:
            text: '2'
            on_press: input.text += self.text
        Button:
            text: '3'
            on_press: input.text += self.text
        Button:
            text: '*'
            on_press: input.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: 'Clear'
            on_press: input.text = ''
        Button:
            text: '0'
            on_press: input.text += self.text
        Button:
            text: '.'
            on_press: input.text += self.text
        Button:
            text: '/'
            on_press: input.text += self.text
    BoxLayout:
        spacing: 10
        Button:
            text: '='
            on_press: calculator.calculation(input.text)
